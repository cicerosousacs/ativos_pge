
<% if @admin.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <ul>
        <% @admin.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>


<%= form_with(model: [ :admins_ativo, @admin ], local: true ) do |form| %>

<div class="row g-3">
  <div class="control col-md-5">
    <%= form.label :nome %>
    <%= form.text_field :nome, class:"form-control" %>
  </div>

  <div class="control col-md-4">
    <%= form.label :password %>
    <%= form.password_field :password, class:"form-control" %>
  </div>

  <div class="control col-md-5">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control", placeholder:"@ativos.pge" %>
  </div>

  <div class="control col-md-4">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class:"form-control" %>
  </div>

  <div class="control col-md-4"><br>
    <%= form.label :status, "Ativo/Inativo" %> 
    <%= form.check_box :status %>
  </div>
</div>

<div class="text-right">
  <%= form.submit "Salvar", class:"btn btn-sm btn-primary" %>
</div>

<% end %>