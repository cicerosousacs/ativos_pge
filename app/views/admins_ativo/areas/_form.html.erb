
<% if @area.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <ul>
            <% @area.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>


<%= form_with(model: [ :admins_ativo, @area ], local: true ) do |form| %>

  <div class="form-group">
    <%= form.label :descricao %> <br>
    <%= form.text_field :descricao, class:"form-control bg-light border-6 small" %>
  </div>

<div class="text-right">
  <%= form.submit "Salvar", class:"btn btn-sm btn-primary" %>
</div>
<% end %>