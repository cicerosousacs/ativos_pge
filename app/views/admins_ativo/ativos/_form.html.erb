
<% if @ativo.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <ul>
            <% @ativo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>


<%= form_with(model: [ :admins_ativo, @ativo ], local: true ) do |form| %>
<div class="row g-3">
  <div class="form-group col-md-2">
    <%= form.label :tipo %> <br>
    <%= form.select("tipo_id", @tipo_selects, {include_blank: 'Selecione...'}, class:"form-control") %>
  </div>
  <div class="form-group col-md-2">
    <%= form.label :marca %> <br>
    <%= form.select("marca_id", @marca_selects, {include_blank: 'Selecione...'}, class:"form-control") %>
  </div>
  <div class="form-group col-md-8">
    <%= form.label :modelo %> <br>
    <%= form.text_field :modelo, class:"form-control" %>
  </div>
  <div class="form-group col-md-2">
    <%= form.label :serial %> <br>
    <%= form.text_field :serial, class:"form-control" %>
  </div>
  <div class="form-group col-md-2">
    <%= form.label :tombo %> <br>
    <%= form.text_field :tombo, class:"form-control" %>
  </div>
  <div class="form-group col-md-8">
    <%= form.label :especificação %> <br>
    <%= form.text_area :especificacao, class:"form-control" %>
  </div>
  <div class="form-group col-md-2">
    <%= form.label :data_aquisicao %> <br>
    <%= form.date_field :data_aquisicao, class:"form-control" %>
  </div>
  <div class="form-group col-md-2">
    <%= form.label :garantia %> <br>
    <%= form.check_box :garantia %>
  </div>
</div>
  <hr/>

  <div class="text-right">
    <%= form.submit "Salvar", class:"btn btn-sm btn-primary" %>
  </div>

<% end %>