<% if @situacao.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <ul>
            <% @situacao.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>


<%= form_with(model: [ :admins_ativo, @situacao ], local: true ) do |form| %>

  <div class="form-group">
    <%= form.label :condicao_id %> <br>
    <%= form.select("condicao_id", @condicao_options, { include_blank: 'Selecione...'}, class:"form-control") %>
  </div>
  
  <div class="form-group">
    <%= form.label :situacao %> <br>
    <%= form.text_field :descricao, class:"form-control" %>
  </div>

  <div class="text-right">
    <%= form.submit "Salvar", class:"btn btn-sm btn-primary" %>
  </div>

<% end %>