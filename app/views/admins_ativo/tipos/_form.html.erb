
<% if @tipo.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
        <ul>
            <% @tipo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>


<%= form_with(model: [ :admins_ativo, @tipo ], local: true ) do |form| %>

  <div class="form-group">
    <%= form.label :tipo %> <br>
    <%= form.text_field :descricao, class:"form-control bg-light border-6 small" %>
  </div>

  <button type="submit" class="btn btn-sm btn-primary">Salvar</button>

<% end %>
